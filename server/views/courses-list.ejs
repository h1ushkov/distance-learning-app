<div id="main-display">
<h1>Your courses list</h1>
<% courses.forEach((course) => { %>
    <div hx-get="/api/lessons/cid/<%= course.id %>" hx-swap="outerHTML" hx-trigger="click" hx-target="#main-display" class="course-card">
            <h3 class="course-title"><%= course.title %></h3>
                <p class="course-title" hx-update="innerHTML">
                    <% if (user)  { %>
                    Instructor: <%= course.instructor == user.username ? 'You🫵' : course.instructor %>
                  </p>
                  <% } %>
            <p class="course-section"><%= course.section %></p>
           <code> <%= course.code %></code>
      <!-- Add a "Delete" button with a form for each course -->
      <div class="delete-form" >
        <button hx-delete="/api/courses/<%= course.id %>" hx-target="#main-display" hx-confirm="Are you sure you want to delete this course?">🗑️</button>
      </div>
      
    </div>
  
  <% }) %>
</div>
